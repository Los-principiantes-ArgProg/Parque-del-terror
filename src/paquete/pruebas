package paquete;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.fail;

import org.junit.Test;

public class Tests {

	@Test
	public void PromocionPorcentualTest() {

		Atraccion atracciones[] = { new Atraccion("La Posada de Hades", 50, 60, 50, TipoAtraccion.DEGUSTACION),
				new Atraccion("Canibalismo y cervezas", 28, 60, 20, TipoAtraccion.DEGUSTACION) };

		PromocionPorcentual promocion = new PromocionPorcentual("Pack Degustacion", TipoAtraccion.DEGUSTACION,
				atracciones, 20);

		int costoEsperado = 62;
		int costoObtenido = promocion.calculoPromocion();
		int tiempoEsperado = 120;
		int tiempoObtenido = promocion.getTiempoPromedio();

		assertEquals(costoEsperado, costoObtenido);
		assertEquals(tiempoEsperado, tiempoObtenido);
	}

	@Test
	public void PromocionAbsolutaTest() {

		Atraccion atracciones[] = { new Atraccion("Castillo de Dr√°cula", 50, 240, 25, TipoAtraccion.ADRENALINA),
				new Atraccion("Nido de Dragones", 40, 120, 10, TipoAtraccion.ADRENALINA),
				new Atraccion("Laberinto", 50, 20, 4, TipoAtraccion.ADRENALINA) };

		PromocionAbsoluta promocion = new PromocionAbsoluta("Pack Adrenalina", TipoAtraccion.ADRENALINA, atracciones,
				35);

		int costoEsperado = 35;
		int costoObtenido = promocion.calculoPromocion();
		int tiempoEsperado = 380;
		int tiempoObtenido = promocion.getTiempoPromedio();

		assertEquals(costoEsperado, costoObtenido);
		assertEquals(tiempoEsperado, tiempoObtenido);

	}

	@Test
	public void PromocionAxBTest() {

		Atraccion atracciones[] = { new Atraccion("Bosque encantado", 50, 240, 25, TipoAtraccion.PASEO),
				new Atraccion("Lago del terror", 40, 120, 10, TipoAtraccion.PASEO),
				new Atraccion("Tren Fantasma", 20, 4, 7, TipoAtraccion.PASEO), };

		PromocionAxB promocion = new PromocionAxB("Pack Paseo", TipoAtraccion.PASEO, atracciones);

		int costoEsperado = 90;
		int costoObtenido = promocion.calculoPromocion();
		int tiempoEsperado = 364;
		int tiempoObtenido = promocion.getTiempoPromedio();

		assertEquals(costoEsperado, costoObtenido);
		assertEquals(tiempoEsperado, tiempoObtenido);
	}

	

}
